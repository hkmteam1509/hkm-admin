    <script>
        $(document).ready(function(){
          function validateEmail(email) {
            const re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(email);
          }

          const resetPasswordBtn = document.getElementById("reset-password-button");
          const emailBox = document.getElementById("username");
          const resetPasswordOpenModalBtn = document.getElementById("reset-password-open-modal-button");
          const invalidEmail = document.getElementById("invalid-email");
          resetPasswordBtn.addEventListener("click", function(){
            if(emailBox.value.length <= 0){
              invalidEmail.style.display= "block";
            }
            else{
                if(validateEmail(emailBox.value)){
                  invalidEmail.style.display= "none";
                  resetPasswordOpenModalBtn.click();
              }
              else{
                invalidEmail.style.display= "block";
              }
            }
          });

        });
    </script>
