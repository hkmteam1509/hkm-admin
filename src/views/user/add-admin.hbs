<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="pro-ad" style="padding: 20px; background-color: white;">
        <form action="/admins/add-admin" method="post" id="register-form">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="firstname">Firstname</label>
                        <input type="text" id="firstname" name="firstname"
                            {{#if firstname}}
                                value="{{firstname}}"
                            {{/if}}
                        title="Please enter you username" placeholder="Enter firstname here..." required="" class="form-control" >
                    </div>
                    <div class="form-group">
                        <label for="lastname">Lastname</label>
                        <input type="text" id="lastname" name="lastname"
                            {{#if lastname}}
                                value="{{lastname}}"
                            {{/if}}
                        title="Please enter you username" placeholder="Enter lastname here..." required="" class="form-control" >
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" name="email"
                            {{#if email}}
                                value="{{email}}"
                            {{/if}}
                        title="Please enter your email address" placeholder="Enter email address here..." required="" class="form-control" >
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" name="username"
                            {{#isEqual errorCode 1 }}
                                style="margin-bottom: 5px"
                            {{/isEqual}}
                            {{#if username}}
                                value="{{username}}"
                            {{/if}}
                        title="Please enter you username" placeholder="Enter username here..." required="" class="form-control" >
                    </div>
                    {{#isEqual errorCode 1}}
                        <div class="my-invalid-feedback" style="margin-bottom: 2; display: block">
                            Username existed
                        </div>
                    {{/isEqual}}
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password"
                            {{#if password}}
                                value="{{password}}"
                            {{/if}}
                        title="Please enter your password" placeholder="Enter password here..." required="" value="" class="form-control" id="password-admin">
                    </div>
                    <div class="form-group">
                        <label for="password">Confirm password</label>
                        {{!-- <input type="password" name="confirmPassword" title="Please enter confirm password" required="" value="" class="form-control"> --}}
                        <input id="confirm-password" name="confirmPassword"
                            {{#if confirmPassword}}
                                value="{{confirmPassword}}"
                            {{/if}}
                        style="margin-bottom: 0;" type="password" placeholder="Enter password here..." required="" class="form-control">
                        <div class="my-invalid-feedback" id="my-invalid-confirm">
                            The confirmation password must be the same as the password
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-success loginbtn" type="submit">Create admin account</button>
        </form>
    </div>
    </div>
</div>

