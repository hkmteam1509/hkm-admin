<script>
	function isVietnamesePhoneNumber(number) {
        return /(03|05|07|08|09|01[2|6|8|9])+([0-9]{8})\b/.test(number);
    }
	$(document).ready(function(){
		const form = document.getElementById("add-professors");
		const phone = form["mobileno"];
		form.addEventListener("submit", function(e){
			if(!isVietnamesePhoneNumber(phone.value)){
				e.preventDefault();
				document.getElementById("invalid-phone").style.display="block";
			}else{
				document.getElementById("invalid-phone").style.display="none";
			}
		})
	})
</script>