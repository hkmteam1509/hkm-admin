	<script>
		$(document).ready(function(){
			const newPassword = document.getElementsByName("newPassword")[0];
			const confirmPassword = document.getElementsByName("confirmPassword")[0];
			const form = document.getElementById("change-password-form");
			const invalidConfirmPasswordMessage = document.getElementById("invalid-confirm-password");
			form.addEventListener("submit", (e)=>{
				if(confirmPassword.value !== newPassword.value){
					e.preventDefault();
					invalidConfirmPasswordMessage.style.display="block";
				}
			})
		})
	</script>
