<div class="product-status mg-b-15">
    <div class="container-fluid">	
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Deleted Brands</h4>
                  	{{#if totalNotDeletedBrands}}
						<a style="margin-bottom: 20px; display: block" href="/brands/trash"> <i class="fa fa-trash-o" aria-hidden="true"></i> Brands({{totalNotDeletedBrands}})</a>
					{{/if}}
                    <div class="asset-inner">
                        <table>
                            <tr>
                                <th>No</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Number of Products</th>
                                <th>Action</th>
                            </tr>
                            {{#each brands}}
                                <tr>
                                    <td>{{this.No}}</td>
                                    <td><img src="{{this.brandImage}}" alt="{{this.brandName}}" /></td>
                                    <td>{{this.brandName}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td>
										<button title="Restore" class="pd-setting-ed" data-id={{this.brandID}} data-toggle="modal" data-target="#restoreBrandModal"><i class="fa fa-share"></i></button>
										<button title="Delete" data-id={{this.brandID}} class="pd-setting-ed" data-toggle="modal" data-target="#deleteBrandModal"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                    </td>
                                </tr>
                            {{/each}}

                        </table>
                    </div>
                    <div id="deleteBrandModal" class="modal modal-edu-general FullColor-popup-DangerModal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-close-area modal-close-df">
                                    <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                                </div>
                                <div class="modal-body">
                                    <span class="educate-icon educate-danger modal-check-pro information-icon-pro"></span>
                                    <h2>Permantly Delete this brand?</h2>
                                    <!-- <p>If you delete this product, they can not access the shop's website anymore.</p> -->
                                </div>
                                <div class="modal-footer danger-md">
                                    <button class="btn btn-danger " type="button" data-dismiss="modal">Cancel</button>
                    				<form method="post" id="delete-brand-form"></form>
									<button class="btn btn-danger" id="submit-delete-form"  type="button">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
					<div id="restoreBrandModal" class="modal modal-edu-general FullColor-popup-WarningModal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-close-area modal-close-df">
                                    <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                                </div>
                                <div class="modal-body">
                                    <span class="educate-icon educate-warning modal-check-pro information-icon-pro"></span>
                                    <h2>Restore this brand?</h2>
                                    <!-- <p>If you delete this product, they can not access the shop's website anymore.</p> -->
                                </div>
                                <div class="modal-footer danger-md">
                                    <button class="btn btn-warning " type="button" data-dismiss="modal">Cancel</button>
                    				<form method="post" id="restore-brand-form"></form>
									<button class="btn btn-warning" id="submit-restore-form" type="button">Restore</button>
                                </div>
                            </div>
                        </div>
                    </div>  
                    {{#if paginationArray}}
                        <form method="get" action="/brands">
                            <ul class="my-pagination">
                                <li class="my-page-item">
                                    <input onchange='this.form.submit();' style="display: none;" id="page-prev" value="{{prevPage}}" type="radio" name="page"/>
                                    <label for="page-prev"  class="my-page-button">Prev</label>
                                </li>
                                {{#each paginationArray }}  
                                    {{#if this.isCurrent}}
                                        <li class="my-page-item">
                                            <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                            <label for="page-{{this.page}}"  class="my-page-link my-current-page">{{this.page}}</label>
                                        </li>
                                    {{else}}
                                        <li class="my-page-item">
                                            <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                            <label for="page-{{this.page}}"  class="my-page-link">{{this.page}}</label>
                                        </li>
                                    {{/if}}
                                {{/each}}
                                <li class="my-page-item">
                                    <input onchange='this.form.submit();' style="display: none;" id="page-next" value="{{nextPage}}" type="radio" name="page"/>
                                    <label for="page-next"  class="my-page-button">Next</label>
                                </li>
                            </ul>
                        </form>
                    {{/if}}
                </div>
            </div>
        </div>
