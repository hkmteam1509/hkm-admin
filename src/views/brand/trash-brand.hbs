<script>
    function paramNameForSend() {
			return "images";    
		}
    $(document).ready(function(){

		const deleteForm = document.getElementById("delete-brand-form");
		const restoreForm = document.getElementById("restore-brand-form");

		 $('#deleteBrandModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var id = button.data('id') // Extract info from data-* attributes
            var modal = $(this);
			modal.find('#delete-brand-form').attr('action', '/brands/permantly-detele/' + id +'?_method=DELETE' );
        });
		 $('#restoreBrandModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var id = button.data('id') // Extract info from data-* attributes
            var modal = $(this);
			modal.find('#restore-brand-form').attr('action', '/brands/restore/' + id +'?_method=POST' );
        });

		document.getElementById("submit-delete-form").addEventListener('click', function(e){
			deleteForm.submit();
		});

		document.getElementById("submit-restore-form").addEventListener('click', function(e){
			restoreForm.submit();
		})
    })
</script>