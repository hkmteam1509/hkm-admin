	<script>
		$(document).ready(function(){
			const deleteForm = document.getElementById("delete-product-form");
			document.getElementById("submit-delete-form").addEventListener('click', function(e){
				deleteForm.submit();
			});
			console.log($('#deleteProductModal'));
			$('#deleteProductModal').on('show.bs.modal', function (event) {
				let button = $(event.relatedTarget) // Button that triggered the modal
				let id = button.data('id') // Extract info from data-* attributes
				let modal = $(this);
				modal.find('#delete-product-form').attr('action', '/products/delete/' + id +'?_method=DELETE' );
			});
		})
		function generatePager(paginationArray, prevPage, nextPage){
			let result = [];
			result.push(`
				<li class="my-page-item">
					<input onchange='startSubmit(this);' style="display: none;" id="page-prev" value="${prevPage}" type="radio" name="page"/>
					<label for="page-prev"  class="my-page-button">Prev</label>
				</li>
			`)

			paginationArray.forEach(page=>{
				if(page.isCurrent){
					result.push(`
						<li class="my-page-item">
							<input onchange='startSubmit(this);' style="display: none;" id="page-${page.page}" value="${page.page}" type="radio" name="page"/>
							<label for="page-${page.page}"  class="my-page-link my-current-page">${page.page}</label>
						</li>
					`)
				}else{
					result.push(`
						<li class="my-page-item">
							<input onchange='startSubmit(this);' style="display: none;" id="page-${page.page}" value="${page.page}" type="radio" name="page"/>
							<label for="page-${page.page}"  class="my-page-link">${page.page}</label>
						</li>
					`)
				}
			});
			result.push(`
				<li class="my-page-item">
					<input onchange='startSubmit(this);' style="display: none;" id="page-next" value="${nextPage}" type="radio" name="page"/>
					<label for="page-next"  class="my-page-button">Next</label>
				</li>
			`)
			return result;
		}

		function genderateProducts(products){
			return products.map(product=>{
				let star = "";
				for(let i = 0 ; i < product.rating;i++){
					star += `<i class="educate-icon educate-star" style="color: #ffb463;"></i>`;
				}
				return `
				 <tr>
					<td>${product.No}</td>
					<td><img src="${product.image}" alt="${product.proName}" /></td>
					<td>${product.proName}</td>
					<td>${product.brand}</td>
					<td>${product.category}</td>
					<td>${product.gender}</td>
					<td>${product.price}</td>
					<td>`
						+star+
					`</td>
					<td>${product.quantity}</td>
					<td>
						<a href="/products/edit/${product.proID}" style="color: black;"><button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
						<button data-id="${product.proID}" title="Delete" class="pd-setting-ed" data-toggle="modal" data-target="#deleteProductModal"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
					</td>
				</tr>
				`;
			})
		}

		function startSubmit(ele){
			const data = {};
			data.name = $("input[name='name']").val();
			data.genderid = $("select[name='genderid'").val();
			data.brandid = $("select[name='brandid']").val();
			data.cateid = $("select[name='cateid']").val();
			data.page = $("input[name='page']:checked").val();
			
			let queryString = "";
			if(data.name.length > 0){
				queryString += ("name=" + data.name + "&");	
			}
			if(data.brandid.length > 0){
				queryString += ("brandid=" + data.brandid + "&");
			}
			if(data.cateid.length > 0){
				queryString += ("cateid=" + data.cateid + "&");
			}
			if(data.genderid.length > 0){
				queryString += ("genderid=" + data.genderid + "&");
			}
			if(!data.page){
				data.page = '1';
			}
			if(ele.getAttribute("name") !== "page"){
				data.page = '1';
			}
			if(data.page.length > 0){
				queryString += ("page=" + data.page);
			}
			const newRelativePathQuery = window.location.pathname + '?' + queryString;
			history.pushState(null, '', newRelativePathQuery);
			 $.ajax({
				method:'get',
				url: '/products/filter',
				data: data,
				success: function(data){
					$("#my-pagination").empty();
					if(data.paginationArray && data.paginationArray.length > 0){
						const pageView = generatePager(data.paginationArray, data.prevPage, data.nextPage);
						pageView.forEach(page=>{
							$("#my-pagination").append(page);
						});
					}
					const productView = genderateProducts(data.products);
					$("#table-body").empty();
					productView.forEach(product=>{
						$("#table-body").append(product);
					});
					$("#search-input").val(data.searchQuery);
				},
				error: function(err){
					console.log(err);
					alert("An error has occurred, please try again");
				}
			})
		}
	</script>
