										{{/isBigger}}
										{{#isBigger this.rating 1}}
											<i class="educate-icon educate-star" style="color: #ffb463;"></i>
										{{/isBigger}}
										{{#isBigger this.rating 2}}
											<i class="educate-icon educate-star" style="color: #ffb463;"></i>
										{{/isBigger}}
										{{#isBigger this.rating 3}}
											<i class="educate-icon educate-star" style="color: #ffb463;"></i>
										{{/isBigger}}
										{{#isBigger this.rating 4}}
											<i class="educate-icon educate-star" style="color: #ffb463;"></i>
										{{/isBigger}}
										</td>
										<td>{{this.quantity}}</td>
										<td>
										{{!-- <a href="/products/view/{{this.proID}}" style="color: black;"><button data-toggle="tooltip" title="Details" class="pd-setting-ed"><i class="fa fa-info-circle" aria-hidden="true"></i></button></a> --}}
