 <div class="product-status mg-b-15">
    <div class="container-fluid">
      <form role="search" method="get" id="search-form" class="sr-input-func" style="width: 100%;">
        <div class="row">
			<div class="col-lg-12 col-12">
				<div class="breadcome-heading my-search-row">
					{{!-- <form role="search" method="get" id="search-form" class="sr-input-func"> --}}
					<div class="my-search-group">
						<input type="text" name="name"
							{{#if searchQuery}}
							value="{{searchQuery}}"
							{{/if}}					
						placeholder="Search..." class="search-int form-control">
						<button type="submit"><i class="fa fa-search"></i></button>
					</div>
					{{!-- </form> --}}
				</div>
			</div>
			</div>
			<div class="row my-search-row">
				<div class="col-lg-2 col-md-6 col-sm-6 col-xs-6">
					<h4 style="margin-top: 10px !important">Show Products of:</h4>
				</div>
				
				<div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">  
				{{!-- <form method="get"> --}}
					<select onchange="this.form.submit()" class="form-control" name="brandid">
					<option value="">all brands</option>
						{{#each brands}}
						{{#if ../selectBrandQuery}}
							{{#isEqual this.brandID ../selectBrandQuery}}
								<option value="{{this.brandID}}" selected = "">{{this.brandName}}</option>
							{{else}}
								<option value="{{this.brandID}}">{{this.brandName}}</option>
							{{/isEqual}}
						{{else}}
							<option value="{{this.brandID}}">{{this.brandName}}</option>
						{{/if}}
						{{/each}}
					</select>
				{{!-- </form> --}}
				</div>
				<div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">  
				{{!-- <form method="get"> --}}
					<select onchange="this.form.submit()" class="form-control" name="cateid">
						<option value="">all categories</option>
						{{#each categories}}
						{{#if ../selectCateQuery}}
							{{#isEqual this.catID ../selectCateQuery}}
								<option value="{{this.catID}}" selected = "">{{this.catName}}</option>
							{{else}}
								<option value="{{this.catID}}">{{this.catName}}</option>
							{{/isEqual}}
						{{else}}
							<option value="{{this.catID}}">{{this.catName}}</option>
						{{/if}}
						{{/each}}
					</select>
				{{!-- </form> --}}
				</div>
				{{!-- - Gender --}}
				<div class="col-lg-2 col-md-12 col-sm-12 col-xs-12"> 
				{{!-- <form method="get"> --}}
					<select onchange="this.form.submit()" class="form-control" name="genderid">
						<option value="">all genders</option>
						{{#if selectGenderQuery}}

						{{#isEqual selectGenderQuery 1}}
							<option value="0">Men</option>
							<option value="1" selected="">Women</option>
							<option value="2">Unisex</option>
						{{/isEqual}}
						{{#isEqual selectGenderQuery 2}}
							<option value="0">Men</option>
							<option value="1">Women</option>
							<option value="2" selected="">Unisex</option>
						{{/isEqual}}
						{{else}}
							{{#isEqual selectGenderQuery 0}}
								<option value="0" selected="">Men</option>
								<option value="1">Women</option>
								<option value="2">Unisex</option>
							{{else}}
								<option value="0">Men</option>
								<option value="1">Women</option>
								<option value="2">Unisex</option>
							{{/isEqual}}
						{{/if}}
					</select>
				{{!-- </form> --}}
				{{!-- <a href="#" id="group2" data-type="select" data-pk="1" data-value="0" data-source="/genders" data-title="Select group">All</a> --}}
				</div>
				<div class="add-product">
					<a href="/products/add">Add Product</a>
				</div>
			</div>
      </form>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <div class="asset-inner">
                        <table>
                            <tr>
                                <th>No</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Brand</th>
                                <th>Category</th>
                                <th>Gender</th>
                                <th>Price ($)</th>
                                <th>Rating</th>
                                <th>Quantity</th>
                                <th>Action</th>
                            </tr>
                            {{#each products}}
                                <tr>
                                    <td>{{this.No}}</td>
                                    <td><img src="{{this.image}}" alt="{{this.proName}}" /></td>
                                    <td>{{this.proName}}</td>
                                    <td>{{this.brand}}</td>
                                    <td>{{this.category}}</td>
                                    <td>{{this.gender}}</td>
                                    <td>{{this.price}}</td>
                                    <td>
                                      {{#isBigger this.rating 0}}
                                          <i class="educate-icon educate-star" style="color: #ffb463;"></i>
                                      {{/isBigger}}
                                      {{#isBigger this.rating 1}}
                                          <i class="educate-icon educate-star" style="color: #ffb463;"></i>
                                      {{/isBigger}}
                                      {{#isBigger this.rating 2}}
                                          <i class="educate-icon educate-star" style="color: #ffb463;"></i>
                                      {{/isBigger}}
                                      {{#isBigger this.rating 3}}
                                          <i class="educate-icon educate-star" style="color: #ffb463;"></i>
                                      {{/isBigger}}
                                      {{#isBigger this.rating 4}}
                                          <i class="educate-icon educate-star" style="color: #ffb463;"></i>
                                      {{/isBigger}}
                                    </td>
                                    <td>{{this.quantity}}</td>
                                    <td>
                                      {{!-- <a href="/products/view/{{this.proID}}" style="color: black;"><button data-toggle="tooltip" title="Details" class="pd-setting-ed"><i class="fa fa-info-circle" aria-hidden="true"></i></button></a> --}}
                                      <a href="/products/edit/{{this.proID}}" style="color: black;"><button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
                                      <button data-id="{{this.proID}}" title="Delete" class="pd-setting-ed" data-toggle="modal" data-target="#deleteProductModal"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                    </td>
                                </tr>
                            {{/each}}
                        </table>
                    </div>
                    <div  id="deleteProductModal" class="modal modal-edu-general FullColor-popup-DangerModal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-close-area modal-close-df">
                                    <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                                </div>
                                <div class="modal-body">
                                    <span class="educate-icon educate-danger modal-check-pro information-icon-pro"></span>
                                    <h2>Delete this product?</h2>
                                    <!-- <p>If you delete this product, they can not access the shop's website anymore.</p> -->
                                </div>
                                <div class="modal-footer danger-md">
                                    <button class="btn btn-danger " type="button" data-dismiss="modal">Cancel</button>
                                    <form method="post" style="display: none;" id="delete-product-form"></form>
									<button class="btn btn-danger" id="submit-delete-form" type="button">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#if paginationArray}}
                        <form 	
                          method="get"
                          action="/products"
						            > 
                          {{#if searchQuery}}
                            <input readonly type="text" name="name" style="display: none;" value="{{searchQuery}}"/>
                          {{/if}}
						  {{#if selectBrandQuery}}
                            <input readonly type="number" name="brandid" style="display: none;" value="{{selectBrandQuery}}"/>
                          {{/if}}
                          {{#if selectCateQuery}}
                            <input readonly type="number" name="cateid" style="display: none;" value="{{selectCateQuery}}"/>
                          {{/if}}
                          {{#if selectGenderQuery}}
                            <input readonly type="number" name="genderid" style="display: none;" value="{{selectGenderQuery}}"/>
                          {{/if}} 
                          <ul class="my-pagination">
                              <li class="my-page-item">
                                  <input onchange='this.form.submit();' style="display: none;" id="page-prev" value="{{prevPage}}" type="radio" name="page"/>
                                  <label for="page-prev"  class="my-page-button">Prev</label>
                              </li>
                              {{#each paginationArray }}  
                                  {{#if this.isCurrent}}
                                      <li class="my-page-item">
                                          <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                          <label for="page-{{this.page}}"  class="my-page-link my-current-page">{{this.page}}</label>
                                      </li>
                                  {{else}}
                                      <li class="my-page-item">
                                          <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                          <label for="page-{{this.page}}"  class="my-page-link">{{this.page}}</label>
                                      </li>
                                  {{/if}}
                              {{/each}}
                              <li class="my-page-item">
                                  <input onchange='this.form.submit();' style="display: none;" id="page-next" value="{{nextPage}}" type="radio" name="page"/>
                                  <label for="page-next"  class="my-page-button">Next</label>
                              </li>
                          </ul>
                        </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
