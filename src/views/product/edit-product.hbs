						<button onClick="removeRow(this)" data-toggle="tooltip" title="Trash" class="pd-setting-ed" style="color: black; cursor:pointer"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
					</td>
				</tr>	
				`;
			
				attriTable.append(newRow);
                document.querySelector(".attri-empty-feedback").style.visibility="hidden";
				$("#addAttributesModal").modal('hide');
			}
			return false;
		}
