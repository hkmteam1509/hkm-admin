                                                        </div>
                                                        <div class="form-group">
                                                            <label for="lastname">Last Name:</label>
                                                            <input name="lastname" type="text" class="form-control" placeholder="Last Name" value="{{f_lastname}}" readonly="">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="mobileno">Mobile number:</label>
                                                            <input name="mobileno" type="text" class="form-control" placeholder="Mobile Number" value="{{f_phone}}" readonly="">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="address">Country:</label>
                                                            <input name="address" type="text" class="form-control" placeholder="Address" value="{{country}}" readonly="">
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        <div class="form-group">
                                                            <label for="address">Address:</label>
                                                            <input name="address" type="text" class="form-control" placeholder="Address" value="{{address}}" readonly="">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="address">Ward:</label>
                                                            <input name="address" type="text" class="form-control" placeholder="Address" value="{{ward}}" readonly="">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="address">District:</label>
                                                            <input name="address" type="text" class="form-control" placeholder="Address" value="{{distric}}" readonly="">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="address">Province:</label>
                                                            <input name="address" type="text" class="form-control" placeholder="Address" value="{{province}}" readonly="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-tab-list tab-pane fade" id="productInfo">
                                    <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="product-status-wrap">
                                                <div class="asset-inner">
                                                    <table>
                                                        <tr>
                                                            <th>No</th>
                                                            <th>Image</th>
                                                            <th>Name</th>
                                                            <th>Brand</th>
                                                            <th>Category</th>
                                                            <th>Gender</th>
                                                            <th>Color</th>
                                                            <th>Quantity</th>
                                                            <th>Unit's price ($)</th>
                                                            <th>Total price ($)</th>
                                                            <th>Action</th>
                                                        </tr>
                                                        {{#each ../items}}
                                                            <tr>
                                                                <td>{{this.No}}</td>
                                                                <td><img src="{{this.img}}" alt="" /></td>
                                                                <td>{{this.proName}}</td>
                                                                {{#each ../../brands}}
                                                                    {{#isEqual ../this.brand this.brandID}}
                                                                        <td>{{this.brandName}}</td>
                                                                    {{/isEqual}}
                                                                {{/each}}
                                                                {{#each ../../categories}}
                                                                    {{#isEqual ../this.cate this.catID}}
                                                                        <td>{{this.catName}}</td>
                                                                    {{/isEqual}}
                                                                {{/each}}
                                                                {{#isEqual this.gender 0}}
                                                                    <td>Men</td>
                                                                {{/isEqual}}
                                                                {{#isEqual this.gender 1}}
                                                                    <td>Women</td>
                                                                {{/isEqual}}
                                                                {{#isEqual this.gender 2}}
                                                                    <td>Unisex</td>
                                                                {{/isEqual}}
                                                                <td><input class="my-attribute-input my-attribute-input-color" style="background: {{this.color}}" readonly=""></input></td>
                                                                <td>{{this.quantity}}</td>
                                                                <td>{{this.unitPrice}}</td>
                                                                <td>{{this.totalPrice}}</td>
                                                                <td>
                                                                    <a href="/products/edit/{{this.proID}}" style="color: black;"><button data-toggle="tooltip" title="Details" class="pd-setting-ed"><i class="fa fa-info-circle" aria-hidden="true"></i></button></a>
                                                                </td>
                                                            </tr>
                                                        {{/each}}
                                                    </table>
                                                </div>
                                                {{#if ../paginationArray}}
                                                    <form id="pagination-form" method="get" action="/orders/view/{{orderID}}"> 
                                                        <ul class="my-pagination">
                                                            <li class="my-page-item">
                                                                <input onchange='this.form.submit();' style="display: none;" id="page-prev" value="{{../prevPage}}" type="radio" name="itemPage"/>
                                                                <label for="page-prev"  class="my-page-button">Prev</label>
                                                            </li>
                                                            {{#each ../paginationArray}}  
                                                                {{#if this.isCurrent}}
                                                                    <li class="my-page-item">
                                                                        <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="itemPage"/>
                                                                        <label for="page-{{this.page}}"  class="my-page-link my-current-page">{{this.page}}</label>
                                                                    </li>
                                                                {{else}}
                                                                    <li class="my-page-item">
                                                                        <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="itemPage"/>
                                                                        <label for="page-{{this.page}}"  class="my-page-link">{{this.page}}</label>
                                                                    </li>
                                                                {{/if}}
                                                            {{/each}}
                                                            <li class="my-page-item">
                                                                <input onchange='this.form.submit();' style="display: none;" id="page-next" value="{{../nextPage}}" type="radio" name="itemPage"/>
                                                                <label for="page-next"  class="my-page-button">Next</label>
                                                            </li>
                                                        </ul>
                                                    </form>
                                                {{/if}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/with}}
                        </div>
