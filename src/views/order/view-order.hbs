                        <div id="myTabContent" class="tab-content custom-product-edit">
                            {{#with order}}
                                <div class="product-tab-list tab-pane fade active in" id="orderInfo">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="review-content-section">
                                                <div id="add-professors" action="#" class="add-professors">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                            <div class="form-group">
                                                                <label for="order-id">Order Id</label>
                                                                <input name="order-id" type="text" class="form-control" value="{{orderID}}" readonly="">
                                                            </div>
                                                            <div class="form-group">
                                                            <label for="order total">Order total ($)</label>
                                                                <input name="order total" type="text" class="form-control"  value="{{total}}" readonly="">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="order-id">Change Order Status</label>
                                                                <form method="post" action="/orders/view/{{orderID}}?_method=PUT" style="position: relative;">
                                                                    <select class="form-control" onchange="this.form.submit()" name="statusBox">
                                                                        {{#isEqual this.status 1}}
                                                                            <option value="1" selected="">Pending confirmation</option>
                                                                            <option value="2">Confirmed</option>
                                                                            <option value="3">Pick by courier</option>
                                                                            <option value="4">On their way</option>
                                                                            <option value="5">Arrived</option>
                                                                            <option value="6">Completed</option>
                                                                            <option value="7">Canceled</option>
                                                                        {{/isEqual}}
                                                                        {{#isEqual this.status 2}}
                                                                            <option value="1">Pending confirmation</option>
                                                                            <option value="2" selected="">Confirmed</option>
                                                                            <option value="3">Pick by courier</option>
                                                                            <option value="4">On their way</option>
                                                                            <option value="5">Arrived</option>
                                                                            <option value="6">Completed</option>
                                                                            <option value="7">Canceled</option>
                                                                        {{/isEqual}}
                                                                        {{#isEqual this.status 3}}
                                                                            <option value="1">Pending confirmation</option>
                                                                            <option value="2">Confirmed</option>
                                                                            <option value="3" selected="">Pick by courier</option>
                                                                            <option value="4">On their way</option>
                                                                            <option value="5">Arrived</option>
                                                                            <option value="6">Completed</option>
                                                                            <option value="7">Canceled</option>
                                                                        {{/isEqual}}
                                                                        {{#isEqual this.status 4}}
                                                                            <option value="1">Pending confirmation</option>
                                                                            <option value="2">Confirmed</option>
                                                                            <option value="3">Pick by courier</option>
                                                                            <option value="4" selected="">On their way</option>
                                                                            <option value="5">Arrived</option>
                                                                            <option value="6">Completed</option>
                                                                            <option value="7">Canceled</option>
                                                                        {{/isEqual}}
                                                                        {{#isEqual this.status 5}}
                                                                            <option value="1">Pending confirmation</option>
                                                                            <option value="2">Confirmed</option>
                                                                            <option value="3">Pick by courier</option>
                                                                            <option value="4">On their way</option>
                                                                            <option value="5" selected="">Arrived</option>
                                                                            <option value="6">Completed</option>
                                                                            <option value="7">Canceled</option>
                                                                        {{/isEqual}}
                                                                        {{#isEqual this.status 6}}
                                                                            <option value="1">Pending confirmation</option>
                                                                            <option value="2">Confirmed</option>
                                                                            <option value="3">Pick by courier</option>
                                                                            <option value="4">On their way</option>
                                                                            <option value="5">Arrived</option>
                                                                            <option value="6" selected="">Completed</option>
                                                                            <option value="7">Canceled</option>
                                                                        {{/isEqual}}
